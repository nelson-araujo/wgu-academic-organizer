<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nelsonaraujo.academicorganizer">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AcademicOrganizer"
        tools:targetApi="31">
        <activity
            android:name=".Controllers.Assessments"
            android:exported="false" />
        <activity
            android:name=".Controllers.Courses"
            android:exported="false" />
        <activity
            android:name=".Controllers.TermAddEdit"
            android:exported="false" />
        <activity
            android:name=".Controllers.TermListCourses"
            android:exported="false" />
        <activity
            android:name=".Controllers.Terms"
            android:exported="false"
            android:label="@string/title_activity_terms"
            android:theme="@style/Theme.AcademicOrganizer.NoActionBar" />
        <activity
            android:name=".AcademicOrganizer"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name = "com.nelsonaraujo.academicorganizer.Models.AppProvider"
            android:authorities = "com.nelsonaraujo.academicorganizer.provider"
            android:exported = "false" />

    </application>



</manifest>